<script type="text/javascript" src="../xpath.symbol.js"></script>
<script type="text/javascript" src="../xpath.lexer.js"></script>
<script type="text/javascript" src="jquery-1.3.2.min.js"></script>
<script type="text/javascript">
function test(form) {
    var val = form.in.value;
    var out = document.getElementById("out");
    var l = new xpath.lexer.Lexer(val);
    
    var html = "<table><tr><th>Token</th><th>Token Name</th><th>Value</th></tr>";
    while (tok = l.nextToken()) {
        var tokName = xpath.symbol.symbolToString(tok);
        html += "<tr><td>" + tok + "</td><td>" + tokName + "</td><td>";
        if (l.getValue())
            html += l.getValue();
        html += "</td></tr>";
    }
    html += "</table>";
    out.innerHTML = html;
}
</script>
</head>
<body>
<h1>Lexer Tester!</h1>
<form id="test-form">
    <input type="text" name="in" id="in" />
    <input type="button" value="Test!" onclick="test(this.form)" />
</form>
<div id="out">
</div>
